@model DataAccessLayer.Entities.SubCategoory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Alt Kategori Güncelleme Paneli</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopCattegoryId" class="control-label"></label>
                <select asp-for="TopCattegoryId" class="form-control" asp-items="ViewBag.TopCattegoryId"></select>
                <span asp-validation-for="TopCattegoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CattegoryId" class="control-label"></label>
                <select asp-for="CattegoryId" class="form-control" asp-items="ViewBag.CattegoryId"></select>
                <span asp-validation-for="CattegoryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="form-group">
    <input type="submit" value="Kaydet" class="btn btn-outline-success" />
</div>
