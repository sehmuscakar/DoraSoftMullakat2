@model List<DataAccessLayer.Dtos.CategoryListDto>


<table class="table"> @*bu kisimda filteleme yapmadan önce gelen kısımdır.*@
    <thead>
        <tr>
            <th>
                @Html.DisplayName("No")
            </th>
            <th>
                @Html.DisplayName("Resim")
            </th>
            <th>
                @Html.DisplayName("Adı")
            </th>
            <th>
                @Html.DisplayName("Fiyatı")
            </th>
            <th>
                @Html.DisplayName("AKTİF/PASİF")
            </th>
            <th>
                @Html.DisplayName("Üst Kategori Adı")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
               <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="form control" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopCattegoryName)
            </td>
            <td>
             
                <a href="/HomeCategory/SubCategory/@item.Id">Detaya Git</a>
              
            </td>
        </tr>
}
    </tbody>
</table>
