@model List<DataAccessLayer.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section-title">
    <br />
    <br />
    <h2>DoraSoft</h2>
    <p>Her zaman her heryerde</p>
</div>




<table class="table"> @*bu filtrelendikten sonraki listelenen alandır.*@
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Resim")
            </th>
            <th>
                @Html.DisplayName("Adı")
            </th>
            <th>
                @Html.DisplayName("Fiyatı")
            </th>
            <th>
                @Html.DisplayName("AKTİF/PASİF")
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="form control" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
              
                <td>

                    <a asp-action="Details" asp-route-id="@item.Id">Detaya Git</a>

                </td>
            </tr>
        }
    </tbody>
</table>
